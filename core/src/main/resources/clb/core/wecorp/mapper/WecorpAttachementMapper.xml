<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="clb.core.wecorp.mapper.WecorpAttachmentMapper">

        <resultMap id="attachmentMap" type="clb.core.wecorp.dto.WecorpAttachment">
            <id column="id" property="id" jdbcType="VARCHAR"/>
            <result column="store_path" property="storePath" jdbcType="VARCHAR"/>
            <result column="name" property="name" jdbcType="VARCHAR"/>
            <result column="type" property="type" jdbcType="VARCHAR"/>
            <result column="group_id" property="groupId" jdbcType="VARCHAR"/>
        </resultMap>

        <!--<resultMap id="dtoMap" type="com.bjgas.dto.BgAttachmentDTO">
            <id column="id" property="attachmentId" jdbcType="VARCHAR"/>
            <result column="store_path" property="attachmentUrl" jdbcType="VARCHAR"/>
            <result column="name" property="attachmentName" jdbcType="VARCHAR"/>
            <result column="type" property="attachmentType" jdbcType="VARCHAR"/>
        </resultMap>-->

        <select id="countAttachment" resultType="int" >
           SELECT count(1) FROM woa_attachment WHERE type=#{type}
           <if test="groupId!=null">
               AND group_id=#{groupId}
           </if>
            <if test="groupId==null">
                AND group_id IS NULL
            </if>
        </select>

        <select id="queryByGroupIdAndType" resultMap="attachmentMap" >
            SELECT * FROM woa_attachment WHERE 1=1
            <if test="type!=null">
                AND type=#{type}
            </if>
            <if test="groupId!=null">
                AND group_id=#{groupId}
            </if>
            <if test="groupId==null">
                AND group_id IS NULL
            </if>
            ORDER BY creation_date DESC
        </select>

</mapper>
